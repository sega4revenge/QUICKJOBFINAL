<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/usersend"
        android:background="@color/white"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/avata"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_num"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/border_textview_number_messager"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:id="@+id/rowone">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameuser"
                    android:textSize="16dp"
                    android:text="Namedsdsdss"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_weight="65"
                    android:textColor="@color/black"
                    />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/time"
                        android:textSize="10dp"
                        android:gravity="right"
                        android:text="dsadas"
                        android:layout_weight="35"
                        android:paddingRight="10dp"
                        android:textColor="@color/base"
                        />
                </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/messager"
                        android:textSize="14dp"
                        android:text="Messager"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginRight="50dp"
                        android:textColor="@color/slide_3"
                        android:layout_below="@id/rowone"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="@color/indigo2"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/divide"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>