<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollPre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:textSize="15dp"
        android:text="@string/st_txtTTCT"
        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/xml_borderchagne"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/img_logcompany"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/bannercompany2"
                android:scaleType="centerCrop"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:text="ADD PHOTO"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
                    android:drawablePadding="15sp"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:id="@+id/btnphoto"
                    />
            </LinearLayout>
Æ°
            <Button
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:background="@color/white"
                android:drawableBottom="@drawable/ic_photo_camera_black_24dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:id="@+id/btnreplogo"
                android:visibility="gone"
                />


        </FrameLayout>

        <EditText
            android:gravity="center|left"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/xml_border_edittext"
            android:id="@+id/tencongty"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/st_hintTenCT"
            android:maxLines="1"
            android:textSize="15dp"
           />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#EEEEEE">

            <EditText
                android:background="@drawable/xml_border_edittext"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:hint="@string/st_diachict"
                android:textSize="15dp"
                android:id="@+id/ed_address_company"
                />



            <EditText
                android:gravity="top"
                android:background="@drawable/xml_border_edittext"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:hint="@string/st_txtGTCT"
                android:textSize="15dp"
                android:id="@+id/ed_infor_company"/>


        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:textSize="15dp"
        android:text="@string/st_txtTTCV"
        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/xml_borderchagne"
        >


        <EditText
            android:gravity="center|left"
            android:background="@drawable/xml_border_edittext"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/st_hintTenCV"
            android:textSize="15dp"
            android:id="@+id/ed_namejob"
            />


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/sp_carrer"
            android:layout_marginTop="5dp">

        </Spinner>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:weightSum="100">


            <EditText
                android:gravity="center|left"
                android:background="@drawable/xml_border_edittext"

                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="@string/st_hintSoLuongTuyen"
                android:textSize="15dp"
                android:id="@+id/ed_number_apply"
                android:inputType="number"
                android:layout_weight="50"/>


            <Spinner
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="50"
                android:id="@+id/sp_salary"
                android:layout_marginTop="5dp">

            </Spinner>
        </LinearLayout>


            <EditText
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/st_diachi"
                android:textSize="15dp"
                android:paddingLeft="5dp"
                android:id="@+id/ed_address_job"
                android:onClick="onPickPlaceWork"
                android:focusable="false"
                android:background="@drawable/xml_border_edittext"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                />


        <EditText
            android:gravity="center|left"
            android:background="@drawable/xml_border_edittext"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/st_hintHanNop"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:id="@+id/ed_datelimit"
            android:onClick="onDateLimitApply"
            android:focusable="false"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:counterEnabled="true"
            app:counterMaxLength="500"
            app:counterTextAppearance="@style/counterText"
            app:counterOverflowTextAppearance="@style/counterOverride">
        <EditText
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="@string/st_hintMotaCV"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:id="@+id/ed_infor_job"
            android:background="@drawable/xml_border_edittext"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"/>

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:counterEnabled="true"
            app:counterMaxLength="500"
            app:counterTextAppearance="@style/counterText"
            app:counterOverflowTextAppearance="@style/counterOverride">
            <EditText
                android:gravity="top"
                android:background="@drawable/xml_border_edittext"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:hint="@string/st_phucloi"
                android:textSize="15dp"
                android:paddingLeft="5dp"
                android:id="@+id/ed_pl"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:text="@string/st_hintYeuCau"
        android:id="@+id/textView7"
        android:textSize="15dp"/>
    <android.support.v7.widget.CardView
        android:id="@+id/ca1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/xml_borderchagne">

            <EditText
                android:gravity="center|left"
                android:background="@drawable/xml_border_edittext"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/st_age"
                android:textSize="15dp"
                android:paddingLeft="5dp"
                android:id="@+id/ed_age"
                android:focusable="false"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="50"
            android:id="@+id/sp_education"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

        </Spinner>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/xml_border_edittext"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="100"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="25"
                        >
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/st_gtNam"
                            android:id="@+id/radio_man"
                            android:textSize="12dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="30dp"
                        android:background="@color/iron"
                        android:layout_gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="25"
                        >
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/st_gtNu"
                            android:id="@+id/radio_woman"
                            android:textSize="12dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="30dp"
                        android:background="@color/iron"
                        android:layout_gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="50"
                        >

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/st_notrequest"
                            android:id="@+id/radio_notrequest"
                            android:textSize="12dp"
                            android:checked="true"
                            />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/st_ngoaingu"
                android:textSize="18dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_add_black_24dp"
                    android:id="@+id/img_add_lang"
                    android:onClick="onAddLanguages"/>
            </LinearLayout>

        </LinearLayout>
        <com.dpizarro.autolabel.library.AutoLabelUI
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/label_lang"
            android:layout_margin="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/st_kinang"
                android:textSize="18dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_add_black_24dp"
                    android:id="@+id/img_add_skill"
                    android:onClick="onAddSkill"/>
            </LinearLayout>
        </LinearLayout>
        <com.dpizarro.autolabel.library.AutoLabelUI
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/label_skill"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:counterEnabled="true"
            app:counterMaxLength="500"
            app:counterTextAppearance="@style/counterText"
            app:counterOverflowTextAppearance="@style/counterOverride">

            <EditText
                android:id="@+id/ed_request"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/xml_border_edittext"
                android:gravity="top"
                android:hint="@string/st_ycKhac"
                android:paddingLeft="5dp"
                android:textSize="15dp" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="100">
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/action_deletejpb"
            android:theme="@style/MyButtonXoa"
            android:background="@drawable/xml_borderchange2"
            android:textColor="#ffffff"
            android:layout_weight="40"
            android:textSize="17dp"
            android:gravity="center"
            android:onClick="onDelete"
            android:layout_margin="5dp"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btn_reg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/st_btnDangTin"
            android:ems="10"
            android:textSize="17dp"
            android:layout_margin="5dp"
            android:theme="@style/MyButton4"
            android:textColor="#ffffff"
            android:background="@drawable/xml_borderchange2"
            android:layout_weight="40"
            android:onClick="onRegister"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>
