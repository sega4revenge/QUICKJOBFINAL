                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="50"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="@drawable/xml_border_spinner"/>
                    </LinearLayout>
                    <LinearLayout
